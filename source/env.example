# Database Configuration
TARGET_DB_USER=symuser
TARGET_DB_PASS=sympass
TARGET_DB_HOST=127.0.0.1
TARGET_DB_PORT=3307
TARGET_DB_NAME=dbzains

SOURCE_DB_USER=symuser
SOURCE_DB_PASS=sympass
SOURCE_DB_HOST=127.0.0.1
SOURCE_DB_PORT=3306
SOURCE_DB_NAME=dbzains

# Pipeline Configuration
INTERVAL=60
BATCH_SIZE=8
BATCH_DELAY=2

# Debug and Data Handling
DEBUG_MODE=true
DEEP_DEBUG_JSON=true
AUTO_SANITIZE_DATA=true
PRESERVE_COLUMN_NAMES=true

# Lock Timeout and Retry Configuration
LOCK_TIMEOUT_RETRIES=5
LOCK_TIMEOUT_BASE_DELAY=10
LOCK_TIMEOUT_MAX_DELAY=300
LOCK_TIMEOUT_JITTER=0.1

# Connection Loss Retry Configuration
CONNECTION_LOSS_RETRIES=3

# Pipeline Mode Configuration
PIPELINE_MODE=direct                         # Options: 'direct' (db-to-db via DLT) or 'file_staging' (extract to files first)

# DLT Load Configuration (for direct mode)
TRUNCATE_STAGING_DATASET=true               # Enable DLT staging management via pipeline configuration (DLT 1.15.0 compatible)

# Index Optimization Configuration
ENABLE_INDEX_OPTIMIZATION=true              # Enable automatic index creation for DLT operations to speed up DELETE queries (ONLY for incremental tables)
INDEX_OPTIMIZATION_TIMEOUT=45               # Timeout for staging table index creation (seconds)
CLEANUP_TEMPORARY_INDEXES=true              # Clean up temporary indexes after operations (ONLY for incremental tables)

# File-based staging configuration (used when PIPELINE_MODE=file_staging)
FILE_STAGING_DIR=staging                     # Base directory for staging files
FILE_STAGING_RETENTION_HOURS=24              # How long to keep staging files
FILE_STAGING_WAIT_TIMEOUT=60                 # Timeout for file watcher (seconds)

# Connection Pool Configuration
POOL_SIZE=15                                 # Base connection pool size
MAX_OVERFLOW=20                              # Additional connections beyond pool_size
POOL_TIMEOUT=30                              # Seconds to wait for available connection
POOL_RECYCLE=1800                            # Seconds before recycling connections
POOL_PRE_PING=true                           # Enable connection validation

# HTTP Server Configuration (Health Check Endpoint)
HTTP_SERVER_PORT=8089                        # Port for health check server
HTTP_SERVER_HOST=                            # Host to bind to (empty = all interfaces)
HTTP_SERVER_TIMEOUT=30                       # Request timeout in seconds
HTTP_SERVER_MAX_REQUESTS=1000                # Max requests before restart (prevents memory leaks)
HTTP_SERVER_ENABLE_KEEPALIVE=true            # Enable TCP keepalive
HTTP_SERVER_ENABLE_REUSEADDR=true            # Enable address reuse